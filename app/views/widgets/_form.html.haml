= form_for @widget || Widget.new, validate: true do |f|
  = f.label :name
  = f.text_field :name    
  = f.label :body
  = f.text_area :body

  = f.label :expires_on
  = f.date_select :expires_on, {include_blank: true}, :class => 'validated-datefield'
  = f.hidden_field :expires_on, 'data-validate' => true

  = f.submit
